<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
    <title>KMC</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
    <div class="container">

        <div class="page-header text-center">
            <h1><span class="fa fa-id-badge"></span> Profile Page</h1>
            <a href="/<%=user._id%>/logout" class="btn btn-default btn-sm">Logout</a>
        </div>

        <div class="row"></div>

        <!-- USER INFORMATION -->
        <div class="col-sm-20">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-user-circle-o"></span> Local Account</h3>
                <!--<% if (user.local.username) { %>-->
                <p>
                    <strong>username</strong>:
                    <%= user.local.username %><br>
                </p>
                <!--
                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>
                -->
            </div>
        </div>

        <!--FACEBOOK INFORMATION -->
        <div class="col-sm-20">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span> Page Owner</h3>
                <!-- check if the user has this token (is the user authenticated with this social account) -->
                <!--<% if (user.facebook.token) { %>-->
                <p>
                        <strong>name</strong>:
                        <%= user.facebook.name %><br>
                        <strong>id</strong>:
                        <%= user.facebook.id %><br>
                        <!--<strong>token</strong>:
                        <%= user.facebook.token %><br>
                        <strong>email</strong>:
                        <%= user.facebook.email %>-->
                </p>
                        <% include ./pages %>
                <!--<a href="/<%=user._id%>/unlink/facebook" class="btn btn-primary">Unlink Facebook</a>
                        <% } else { %>
                        <a href="/<%=user._id%>/connect/facebook" class="btn btn-primary">Connect Facebook</a>
                        <% } %>-->
            </div>
        </div>

    </div>
</body>
</html>