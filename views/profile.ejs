<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
    <title>KMC</title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="text/javascript" language="javascript" src="/javascripts/main.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>

<body>
    <div class="container">

        <div class="page-header text-center">
            <h1><span class="fa fa-id-badge"></span> Profile Page</h1>
            <a href="/<%=user._id%>/logout" class="btn btn-default btn-sm">Logout</a>
        </div>

        <div class="row"></div>

        <!-- USER INFORMATION -->
        <div class="col-sm-20">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-user-circle-o"></span> Local Account</h3>
                <!--<% if (user.local.username) { %>-->
                <p>
                    <strong>username</strong>:
                    <%= user.local.username %><br>
                </p>
                <!--
                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>
                -->
            </div>
        </div>


        <!--FACEBOOK INFORMATION -->
        <div class="col-sm-20">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span> Page Owner</h3>
                <!-- check if the user has this token (is the user authenticated with this social account) -->
                <div>
                    <strong>Username</strong>: <span id="userFBName"><%= user.facebook.name %> </span><br>
                    <strong>ID</strong>: <span id="userFBID"><%= user.facebook.id %> </span><br>
                </div>
            </div>
            <% include ./pages %>
        </div>
        <% if (err.length > 0) { %>
            <div class="alert alert-danger">
                <%= err %>
            </div>
            <% } %>
</body>

</html>