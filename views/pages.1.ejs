<% if (user.facebook.pagelist[0]) { %>
    <div class="well">
        <h3 class="text-primary"><span class="fa fa-facebook"></span> Pages
            <a href="/<%=user._id%>/disconnect/page" class="btn btn-primary btn-xs">Unlink Page</a>
        </h3>

        <table class="table table-bordered">
            <p>
                <tr>
                    <th>Page Name</th>
                    <th>ID</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>

                <% for (var i = 0; i < user.facebook.pagelist.length; i++) { %>
                    <tr>
                        <td>
                            <%= user.facebook.pagelist[i].name %>
                        </td>
                        <td>
                            <%= user.facebook.pagelist[i].id %>
                        </td>
                        <td>
                            <%= user.facebook.pagelist[i]._isAppSubscribed %>
                                <% if (err.length > 0) { %>
                                    <div class="alert alert-danger">
                                        <%= err %>
                                    </div>
                                    <% } %>
                        </td>
                        <td>
                            <% if (user.facebook.pagelist[i]._isAppSubscribed == false) { %>
                                <a href='/<%=user._id%>/activatewebhook/<%=i%>' class="btn btn-default btn-xs">Activate</a>
                                <% } if (user.facebook.pagelist[i]._isAppSubscribed == true) { %>
                                    <a href='/<%=user._id%>/deactivatewebhook/<%=i%>' class="btn btn-default btn-xs">Deactivate</a>
                                    <% } %>
                        </td>
                    </tr>
                    <% } %>
            </p>
        </table>
        <% include ./messages %>

    </div>
    <% } else { %>
        <a href="/<%=user._id%>/getpagelist" class="btn btn-primary">Connect Page</a>
                <% } %>